               | @Html.RadioButtonFor(model=>model.estado, "Soltero/a") Soltero/a  |
                @Html.RadioButtonFor(model => model.estado, "Casado/a") Casado/a  |
                @Html.RadioButtonFor(model => model.estado, "Viudo/a") Viudo/a  |
                @Html.RadioButtonFor(model => model.estado, "Union libre") Union Libre  |
                @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
            </div>
        </div>

