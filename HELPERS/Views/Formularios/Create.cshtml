            @Html.LabelFor(model => model.hobbies,"Hobbies:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="checkbox-hobbies">
               | @Html.CheckBox("hobbies[]", false, new { @value = "Programar" }) Programar  |
                @Html.CheckBox("hobbies[]", false, new { @value = "Escuchar Musica" }) Escuchar Musica  |
                @Html.CheckBox("hobbies[]", false, new { @value = "Videojuegos" }) Videojuegos  |
                @Html.CheckBox("hobbies[]", false, new { @value = "Escribir" }) Escribir  |
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
